<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.zqb.carnetwork.example.main.Navigation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车载导航"
            android:gravity="center"
            android:layout_weight="4.8"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="#39626e"
            android:id="@+id/title"
            android:layout_marginLeft="25dp"
            android:textSize="22sp"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="33dp"
            android:background="@drawable/exchange"
            android:layout_marginTop="8dp"
            android:id="@+id/exchange"
            android:layout_marginBottom="15dp"
            android:layout_weight="0.2" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/div"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起点城市"
                android:textSize="18sp"
                android:layout_weight="0.7"
                android:textColor="#39626e" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.3"
                android:id="@+id/choose_start_city">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/start_city"
                    android:layout_weight="1.8"
                    android:textSize="18sp"
                    android:hint="请选择起始城市"/>
                <ImageView
                    style="@style/csy_row_icon"
                    android:src="@drawable/csy_arr_right"
                    android:background="@drawable/linearlayout_selecter1"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3.5"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始地点"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="#39626e"/>
            <AutoCompleteTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:id="@+id/start_area"
                android:layout_marginLeft="10dp"
                android:text="当前位置"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/none_border_edit_shape"
                android:textSize="18sp"/>
            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="20dp"
                android:checked="true"
                android:id="@+id/start_check"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="终点城市"
                android:textSize="18sp"
                android:layout_weight="0.7"
                android:textColor="#39626e" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.3"
                android:id="@+id/choose_end_city">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/end_city"
                    android:layout_weight="1.8"
                    android:textSize="18sp"
                    android:hint="请选择终点城市"/>
                <ImageView
                    style="@style/csy_row_icon"
                    android:src="@drawable/csy_arr_right"
                    android:background="@drawable/linearlayout_selecter1"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3.5"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="终点地点"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textColor="#39626e"/>
            <AutoCompleteTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:id="@+id/end_area"
                android:layout_marginLeft="10dp"
                android:hint="请输入终点"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/none_border_edit_shape"
                android:textSize="18sp"/>
            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="20dp"
                android:checked="false"
                android:clickable="false"
                android:id="@+id/end_check" />
        </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".example.main.Firstpage"
    android:background="@drawable/background"
    android:id="@+id/drawer_layout">
    <FrameLayout
        android:id="@+id/fly_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">
                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/car_pic" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:padding="5dp"
                        android:id="@+id/car_type"
                        android:textColor="#dc8140"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="left|bottom" />
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/infor">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:weightSum="2.5"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical"
                            android:background="@drawable/div"
                            android:layout_height="100dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:padding="5dp"
                                android:layout_gravity="left"
                                android:textColor="#73b4b5"
                                android:text="发动机"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:layout_gravity="right"
                                android:layout_marginTop="5dp"
                                android:padding="5dp"
                                android:id="@+id/engine" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/div"
                            android:layout_height="100dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:padding="5dp"
                                android:layout_gravity="left"
                                android:textColor="#73b4b5"
                                android:text="汽油量"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:layout_gravity="right"
                                android:layout_marginTop="5dp"
                                android:padding="5dp"
                                android:id="@+id/gas" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:weightSum="2.5"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/div"
                            android:layout_height="100dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:padding="5dp"
                                android:layout_gravity="left"
                                android:textColor="#73b4b5"
                                android:text="车灯"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:layout_gravity="right"
                                android:layout_marginTop="5dp"
                                android:padding="5dp"
                                android:id="@+id/lamb" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/div"
                            android:layout_height="100dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:padding="5dp"
                                android:layout_gravity="left"
                                android:textColor="#73b4b5"
                                android:text="变速器"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:layout_gravity="right"
                                android:layout_marginTop="5dp"
                                android:padding="5dp"
                                android:id="@+id/speed" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:weightSum="2.5"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/div"
                            android:layout_height="100dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:padding="5dp"
                                android:textColor="#73b4b5"
                                android:layout_gravity="left"
                                android:text="里程数"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:layout_gravity="right"
                                android:layout_marginTop="5dp"
                                android:padding="5dp"
                                android:id="@+id/mile_num" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/div"
                            android:layout_height="100dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:padding="5dp"
                                android:layout_gravity="left"
                                android:textColor="#73b4b5"
                                android:text="车身"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:layout_gravity="right"
                                android:layout_marginTop="5dp"
                                android:padding="5dp"
                                android:id="@+id/body_level" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#333a4c"
                    android:src="@drawable/change"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:id="@+id/change"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="70dp"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:layout_margin="10dp"
            android:background="#5a5e63"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/music"
                android:id="@+id/album"
                android:layout_marginLeft="8dp"/>
            <LinearLayout
                android:layout_weight="3"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="bottom">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/song"
                    android:singleLine="true"
                    android:textColor="#73b4b5"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/singer"
                    android:textColor="#73b4b5"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:src="@drawable/before"
                    android:id="@+id/before"
                    android:layout_marginTop="3dp"/>
                <ImageButton
                    android:layout_marginTop="3dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:src="@drawable/pause"
                    android:id="@+id/play_pause"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
                <ImageButton
                    android:layout_marginTop="3dp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:src="@drawable/later"
                    android:layout_weight="1"
                    android:id="@+id/later"/>
                <ImageButton
                    android:layout_marginTop="3dp"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/show_list"
                    android:id="@+id/show_list"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <fragment
        android:id="@+id/left_fg"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:tag="LEFT"
        android:name="com.zqb.carnetwork.example.main.LeftFragment"
        tools:layout="@layout/left_fragment" />

</android.support.v4.widget.DrawerLayout  >
